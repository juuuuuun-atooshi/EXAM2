<!DOCTYPE html>
<html>
<head>
  <title>なんちゃってInstagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <section class="frame-header">
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fuild">
          <div class="navbar-header">
            <%= link_to "トップページ", root_path, class: "navbar-brand" %>
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav_target">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="nav_target">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "投稿一覧", pictures_path %></li>
              <% if user_signed_in? %>
                <li><%= link_to 'マイページ', edit_user_registration_path %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "ログイン", new_user_session_path %></li>
                <li><%= link_to "サインアップ", new_user_registration_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  </section>

<%= yield %>

  <section class="frame-footer">
    <footer>
        <p>なんちゃってInstagram</p>
    </footer>
  </section>

</body>
</html>
